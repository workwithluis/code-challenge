{
  "name": "express-crud-api",
  "version": "1.0.0",
  "description": "A RESTful CRUD API built with Express.js and TypeScript with zero-downtime deployment support",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "dev:graceful": "nodemon src/server-graceful.ts",
    "dev:zero-downtime": "nodemon src/server-zero-downtime.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:graceful": "npm run build && node dist/server-graceful.js",
    "start:zero-downtime": "npm run build && node dist/server-zero-downtime.js",
    "start:cluster": "npm run build && ENABLE_CLUSTERING=true node dist/server-zero-downtime.js",
    "start:prod": "npm run build && node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:graceful": "bash scripts/test-graceful-shutdown.sh",
    "test:graceful:continuous": "bash scripts/test-graceful-shutdown.sh --continuous",
    "test:graceful:shutdown": "bash scripts/test-graceful-shutdown.sh --shutdown",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "docker:build": "docker build -t express-crud-api:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env express-crud-api:latest",
    "k8s:deploy": "kubectl apply -f k8s-deployment.yaml",
    "k8s:rollout": "kubectl rollout status deployment/express-crud-api",
    "k8s:logs": "kubectl logs -f deployment/express-crud-api"
  },
  "keywords": [
    "express",
    "typescript",
    "crud",
    "api",
    "rest",
    "zero-downtime",
    "graceful-shutdown",
    "kubernetes"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/sqlite3": "^5.1.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
